<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".WelcomeActivity">



    <TextView
        android:id="@+id/bem_vindo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem vindo usuario"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_view_projects"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:dividerHeight="1dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/empty_projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Projects" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_add_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Adicionar projeto" />
    <Button
        android:id="@+id/btn_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Minhas Tarefas" />

</LinearLayout>